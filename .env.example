# Database Configuration
# Option 1: Single DATABASE_URL (recommended for deployment)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres?sslmode=require

# Option 2: Individual components (fallback if DATABASE_URL not set)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password

# OpenAI (for AI analysis stage)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4.1-mini

# Worker Configuration
WORKER_POLL_INTERVAL=5
WORKER_VISIBILITY_TIMEOUT=300
WORKER_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature flags
ENABLE_AI_STAGE=true
AI_BUDGET_PER_RUN=50
