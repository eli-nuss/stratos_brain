{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/company-chat-api/:path*",
      "destination": "https://wfogbaipiqootjrsprde.supabase.co/functions/v1/company-chat-api/:path*"
    },
    {
      "source": "/api/global-chat-api/:path*",
      "destination": "https://wfogbaipiqootjrsprde.supabase.co/functions/v1/global-chat-api/:path*"
    },
    {
      "source": "/api/investor-api/:path*",
      "destination": "https://wfogbaipiqootjrsprde.supabase.co/functions/v1/investor-api/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/company-chat-api/:path*",
      "headers": [
        { "key": "x-stratos-key", "value": "stratos_brain_api_key_2024" }
      ]
    },
    {
      "source": "/api/global-chat-api/:path*",
      "headers": [
        { "key": "x-stratos-key", "value": "stratos_brain_api_key_2024" }
      ]
    },
    {
      "source": "/api/investor-api/:path*",
      "headers": [
        { "key": "x-stratos-key", "value": "stratos_brain_api_key_2024" }
      ]
    }
  ]
}
